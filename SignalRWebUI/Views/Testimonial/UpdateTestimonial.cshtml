@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Görüş İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Görüş Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="Name">İsim Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Comment">İçerik Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment">
                            </div>
                            <div class="form-group">
                                <label for="Url">Resim URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="Url">
                            </div>
                            <div class="form-group">
                                <label for="status">Durum</label>
                                <input type="text" class="form-control" asp-for="Status" id="status">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Görüş Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






