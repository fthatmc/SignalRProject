@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Bilgisi Girişi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactID" />
                            <div class="form-group">
                                <label for="Location">Lokasyon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Giriniz</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="descriptiont">Açıklama Başlığı</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="descriptiont">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" itemid="description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="openday">Açık Günler</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="openday">
                            </div>
                            <div class="form-group">
                                <label for="opendaydes">Açık Günler Açıklama</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="opendaydes">
                            </div>
                            <div class="form-group">
                                <label for="openhour">Açık Saatler</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="openhour">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgisi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>







